<h2><%= t('views.common.title_index', name: User.model_name.human) %></h2>

<%= link_to t('views.common.new'), new_user_path %>

<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:email) %></th>
      <th><%= User.human_attribute_name(:avatar) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><p><%= user.email %></p></td>
        <% if user.avatar.present? %>
          <td><%= image_tag user.avatar.variant(resize:'1024x1024').processed, class: "image_index" %></td>
        <% end %>
        <td><%= link_to t('views.common.show'), user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
